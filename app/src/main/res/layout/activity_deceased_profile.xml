<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="0dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/backButtonOrbitiary"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        app:srcCompat="@drawable/previous" />

                    <TextView
                        android:id="@+id/txtDeadHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:letterSpacing="0.2"
                        android:text="ORBITIARY OF MR. -lastname-"
                        android:textColor="#80000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="247dp"
                        android:layout_gravity="center|start|top"
                        app:srcCompat="@drawable/headerimg" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_marginTop="-90dp"
                        app:srcCompat="@drawable/user" />

                    <TextView
                        android:id="@+id/txtDisplayFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:text="-name sa namatay-"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDeadDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-date of birth- to -date of death- \n\n 'Be at rest for eternity in heaven' \n - Condolences from St. Siomeow"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="20dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <Button
                            android:id="@+id/btnSendflower"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="29dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:backgroundTint="#f5b5c8"
                            android:text="💮 SEND FLOWERS"
                            android:textSize="13sp" />

                        <Button
                            android:id="@+id/btnSendLove"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="29dp"
                            android:layout_weight="1"
                            android:backgroundTint="#FD7F76"
                            android:text="❤️ GIVE LOVE"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="#979B9E" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ABOUT THE DECEASED"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:paddingTop="12dp"
                        android:paddingBottom="5dp"
                        android:textSize="18dp"
                        android:fontFamily=""
                        android:gravity="center"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="#979B9E" />

                    <TextView
                        android:id="@+id/txtDeadAbout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:padding="20dp"
                        android:text="Johnathan Michael Doe, a beloved husband, father, and grandfather, passed away peacefully on May 20, 2024, at the age of 79, surrounded by his family in Springfield. Born on March 12, 1945, Johnathan served honorably in the U.S. Army before embarking on a distinguished career as a civil engineer with Springfield Municipal Services. His dedication to his work and community was matched only by his love for his family and his passion for gardening, woodworking, and volunteering.\n\nJohnathan is survived by his wife of 52 years, Elizabeth; his children, Jennifer, Michael, and Emily; and his five cherished grandchildren. A memorial service will be held on May 25, 2024, at Springfield Community Church. In lieu of flowers, donations can be made to the Springfield Food Bank or the American Heart Association in his memory. Johnathan's kindness and gentle spirit will be deeply missed by all who knew him."
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="#979B9E" />

                    <TextView
                        android:id="@+id/textView13a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="To order memorial trees or send flowers to the family in memory of -name sa namatay-, please visit our flower store."
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnVisitShop"
                        android:layout_width="150dp"
                        android:layout_marginTop="-10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_height="wrap_content"
                        android:text="VISIT SHOP"
                        android:textStyle="bold"
                        android:backgroundTint="#fa5f26"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:padding="0dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#6c2c1f"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/your_paragraph_text" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1.5dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="5dp"
                                android:background="#FFFFFF" />

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="© 2024 St. Siomeow Funeral Services - CITU Chapel.\nAll Rights Reserved."
                                android:textColor="#FFFFFF"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </ScrollView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>